  document.getElementById('form-selector').addEventListener('change', function() {
    const selectedValue = this.value;

    // Hide all additional fields initially
    document.getElementById('general-fields').style.display = 'none';
    document.getElementById('escalation-fields').style.display = 'none';
    document.getElementById('feedback-fields').style.display = 'none';
    document.getElementById('accessibility-fields').style.display = 'none';
    document.getElementById('asset-defect-fields').style.display = 'none'; // Hide asset defect fields

    // Show fields based on selected form
    if (selectedValue === 'enquiries') {
      document.getElementById('general-fields').style.display = 'block';
    } else if (selectedValue === 'escalation') {
      document.getElementById('general-fields').style.display = 'block';
      document.getElementById('escalation-fields').style.display = 'block';
    } else if (selectedValue === 'feedback') {
      document.getElementById('general-fields').style.display = 'block';
      document.getElementById('feedback-fields').style.display = 'block';
    } else if (selectedValue === 'accessibility') {
      document.getElementById('general-fields').style.display = 'block';
      document.getElementById('accessibility-fields').style.display = 'block';
    } else if (selectedValue === 'asset_defect') {
      document.getElementById('general-fields').style.display = 'block'; // Show general fields
      document.getElementById('asset-defect-fields').style.display = 'block'; // Show asset defect fields
    }
  });
</script>