        {{#if contactpref}}<p><strong>Contact Preference:</strong> {{contactpref}}</p>{{/if}}
        {{#if marketing}}<p><strong>Marketing:</strong> {{marketing}}</p>{{/if}}
        {{#if to}}<p><strong>To:</strong> {{to}}</p>{{/if}}
        {{#if route}}<p><strong>Route:</strong> {{route}}</p>{{/if}}
        {{#if stationstop}}<p><strong>Station/Stop:</strong> {{stationstop}}</p>{{/if}}
        {{#if priority}}<p><strong>Priority:</strong> {{priority}}</p>{{/if}}
